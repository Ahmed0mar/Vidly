@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered table-hover">
    <tr class=""><h3 class="alert alert-info">Movies</h3></tr>

    @if (!Model.Any())
    {
        <p class="alert">There is no movies.</p>
    }
    else
    {
        foreach (var m in Model)
        {
            <tr>
                <td class="list-group-item">@m.Name</td>
            </tr>
        }
    }
</table>

